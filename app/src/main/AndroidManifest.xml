<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="eu.imouto.hupl">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ChooseUploaderActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="*/*"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.EditHttpUploaderActivity" android:theme="@style/PreferenceStyle"/>
        <activity android:name=".ui.GlobalSettingsActivity" android:theme="@style/PreferenceStyle"/>
        <activity
            android:name=".ui.HistoryActivity"
            android:exported="true">
        </activity>
        <activity android:name=".ui.AboutActivity">
        </activity>
        <activity android:name=".ui.FeedbackActivity">
        </activity>
    </application>

</manifest>